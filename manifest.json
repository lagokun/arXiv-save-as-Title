{
    "manifest_version": 3,
    "name": "arXiv Save as Title",
    "version": "1.0",
    "description": "Adds a button to save arXiv PDFs with the paper title as filename.",
    "permissions": ["downloads", "scripting"],
    "host_permissions": ["https://arxiv.org/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://arxiv.org/abs/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_title": "arXiv Save as Title"
    }
  }
  